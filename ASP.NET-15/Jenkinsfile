properties([disableConcurrentBuilds()])

pipeline {
    agent {
         label 'Test'    
         }
             
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
       
        stage("create docker image for test") {
            steps{
                echo " ============== start building image for deploy  =================="
                dir ('ASP.NET-15/Shop-15') {
                sh ' sudo docker build  -t nazarserver/shoptest .'
                sh 'sudo docker run -d --restart=always -p 80:80 --name shoptest nazarserver/shoptest'    
            }
            }
            steps{
                echo " ============== Selenium Test  =================="
                dir ('ASP.NET-15/Shop-15') {
                sh ' echo Super-puper-test'    
            }
            }
            steps{
                echo " ============== Clear after test  =================="
                dir ('ASP.NET-15/Shop-15') {
                sh ' sudo docker stop shoptest'
                sh 'sudo docker rm shoptest'    
            }
            }
           
        }
        stage("integration") {    
            agent { 
                label 'ubuntu'
            }
            steps{
                echo "================ Start building images for integration========="
                dir ('ASP.NET-15/Shop-15') {
                sh ' sudo docker build  -t nazarserver/shop .'
                sh 'sudo docker run -d --restart=always -p 80:80  nazarserver/shop'
            }
        }  
    }
  }
}
